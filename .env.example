# Environment Configuration Template
# Copy this file to .env and fill in your values
# NEVER commit .env to git!

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_NAME=production_db
DB_USER=prod_user
DB_PASSWORD=change_this_to_a_strong_password_min_16_chars
DB_ROOT_PASSWORD=change_this_to_a_strong_root_password

# ============================================
# JENKINS CONFIGURATION
# ============================================
JENKINS_ADMIN_USER=admin
JENKINS_ADMIN_PASSWORD=change_this_jenkins_password

# ============================================
# GITHUB CONTAINER REGISTRY
# ============================================
GHCR_USERNAME=psyunix
GHCR_TOKEN=your_github_personal_access_token_here

# ============================================
# DOMAIN CONFIGURATION (for HTTPS)
# ============================================
DOMAIN_NAME=your-domain.com
JENKINS_DOMAIN=jenkins.your-domain.com
APP_DOMAIN=app.your-domain.com

# ============================================
# SSL/TLS CONFIGURATION
# ============================================
SSL_EMAIL=your-email@example.com

# ============================================
# SECURITY SETTINGS
# ============================================
# Set to 'production' for production environment
ENVIRONMENT=development

# ============================================
# BACKUP CONFIGURATION
# ============================================
BACKUP_PATH=/backups
BACKUP_RETENTION_DAYS=30

# ============================================
# MONITORING
# ============================================
ENABLE_MONITORING=false
MONITORING_PORT=9090

# ============================================
# NOTES
# ============================================
# Generate strong passwords with:
#   openssl rand -base64 32
#
# Create GitHub Personal Access Token:
#   https://github.com/settings/tokens
#   Scopes needed: write:packages, read:packages
